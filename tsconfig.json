{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@api": [
        "./api/index.ts"
      ],
      "@assets": [
        "./assets/index.ts"
      ],
      "@components": [
        "./components/index.ts"
      ],
      "@hooks": [
        "./hooks/index.ts"
      ],
      "@router": [
        "./router/index.ts"
      ],
      "@pages": [
        "./pages/index.ts"
      ],
      "@helpers": [
        "./helpers/index.ts"
      ],
      "@lenguajes": [
        "./i18n.ts"
      ],
      "@stores": [
        "./stores/index.ts"
      ],
      "@theme": [
        "./theme/index.ts"
      ],
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}